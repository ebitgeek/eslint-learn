{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "env": {
    "node": true
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "prettier/@typescript-eslint"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "quotes": ["warn", "single"],
    "semi": "error",
    "max-len": [
      "warn",
      { "code": 130, "ignoreRegExpLiterals": true }
    ],
    "no-tabs": "warn",
    "indent": ["warn", 2]
  }
}
